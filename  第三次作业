<!DOCTYPE html>
<html>
<head>
  <title>CharacterData接口示例</title>
</head>
<body>
  <h1>CharacterData接口示例</h1>
  <div id="text-container">
    <p>This is some <span class="highlight">highlighted</span> text.</p>
  </div>
  <button id="highlight-button">高亮</button>
</body>
<script>
 
  const textContainer = document.getElementById("text-container");
  const highlightButton = document.getElementById("highlight-button");
  
 
  highlightButton.addEventListener("click", function() {

    const highlightSpan = textContainer.querySelector(".highlight");

    const textNode = highlightSpan.firstChild;

    textNode.data = "这是一个已被修改的文本。";
  });
</script>
</html>
