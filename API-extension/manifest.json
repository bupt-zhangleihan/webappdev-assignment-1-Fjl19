{
    "manifest_version": 2,
    "name": "My API Extension",
    "version": "1.0",
    "description": "A simple browser extension to call an API",
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      }
    },
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "content_scripts": 
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
}
  